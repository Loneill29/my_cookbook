<div class="col-md-8">
  <h1>Categories</h1>
    <% @categories.each do |category| %>
      <h4><%= link_to category.name, category %></h4>
    <% end %>

    <%= render partial: 'form', locals: { category: @category }  %>

    <%= link_to "New Category", new_category_path, class: 'btn btn-success' %>
</div>
