<div class="col-md-8-offset-2">
  <%= link_to "+", new_category_path, class: 'btn btn-default add', title: "Add Category" %>
  <div class="title">
    <h1>Categories</h1>
  </div>
  <div class="categories">
    <% @categories.each do |category| %>
      <h4><%= link_to category.name, category %></h4>
    <% end %>
  </div>
</div>
