<%= form_for [category, recipe] do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <p><%= pluralize(recipe.errors.count, "error") %>.</p>
      <ul>
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(recipe.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Recipe title" %>
  <% end %>
  <br>
  <%= form_group_tag(recipe.errors[:photo]) do %>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  <% end %>
  <br>
  <%= form_group_tag(recipe.errors[:ingredient]) do %>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredient, rows: 8, class: 'form-control', placeholder: "Ingredients" %>
  <% end %>
  <br>
  <%= form_group_tag(recipe.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Instructions" %>
  <% end %>
  <br>
  <%= f.submit "Save", class: "btn btn-default" %>
<% end %>
