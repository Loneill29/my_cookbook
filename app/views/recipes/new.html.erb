<div class="col-md-8">
  <h1>New Recipe</h1>
  <%= form_for [@category, @recipe] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Recipe title" %>

    <%= f.label :ingredients %>
    <%= f.text_area :ingredient, rows: 8, class: 'form-control', placeholder: "Ingredients" %>

    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Instructions" %>

    <%= f.submit "Save" %>
  <% end %>
</div>
