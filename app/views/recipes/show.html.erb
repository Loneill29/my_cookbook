<div class="col-md-8-offset-2">
  <h1><%= markdown(@recipe.title) %></h1>
  <div class="edit-delete">
    <%= link_to "Edit", edit_category_recipe_path(@recipe), class: 'btn btn-default' %>
    <%= link_to "Delete", [@recipe.category, @recipe], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this recipe?'} %>
  </div>

  <% if @recipe.photo.attached? %>
    <div class="recipe-photo">
      <image class="photo" src="<%= (url_for(@recipe.photo)) %>">
    </div>
<% end %>

  <h3 class="recipes">Ingredients:</h3>
  <p><%= markdown(@recipe.ingredient) %></p>

  <h3>Instructions</h3>
  <p><%= markdown(@recipe.body) %></p>
</div>
