<h1>Edit Recipe</h1>
  <div class="col-md-8">
    <%= form_for @recipe do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter recipe title" %>


      <%= render 'ingredients/form', ingredient: Ingredient.new, recipe: @recipe %>

      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter recipe body" %>

      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
